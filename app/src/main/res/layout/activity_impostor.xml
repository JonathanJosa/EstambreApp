<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE5D0"
    tools:context=".ImpostorActivity">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/konfettiAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/indicationsTxt"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/encuentra_las_im_genes_que_no_se_repiten"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <TableLayout
        android:id="@+id/impostorTableButtons"
        android:layout_width="371dp"
        android:layout_height="614dp"
        android:background="@drawable/impostor_table_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743">

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>